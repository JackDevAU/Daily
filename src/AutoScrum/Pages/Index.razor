@page "/"
@using Color = MudBlazor.Color

<div id="ui-test-hidden-states">
    @if (!IsPageInitializing) { <input id="is-page-loading" type="hidden" value="true" /> }
    <input id="connection-info-profile-id" type="hidden" value="@(ConnectionInfoRequest?.Id)" />
    <input id="connection-info-profile-name" type="hidden" value="@(ConnectionInfoRequest?.Name)" />
    <input id="connection-info-profile-email" type="hidden" value="@(ConnectionInfoRequest?.UserEmail)" />
    <input id="connection-info-profile-org" type="hidden" value="@(ConnectionInfoRequest?.AzureDevOpsOrganization)" />
    <input id="connection-info-profile-project-name" type="hidden" value="@(ConnectionInfoRequest?.ProjectName)" />
    <input id="connection-info-profile-project-type" type="hidden" value="@(ConnectionInfoRequest?.ProjectType)" />
    <input id="connection-info-profile-team-filter-by" type="hidden" value="@(ConnectionInfoRequest?.TeamFilterBy)" />
</div>
<MudContainer Class="px-0">
    <MudGrid Spacing="2" Justify="Justify.Center" Class="my-2">
        <MudItem xs="12">
            <MudStack Row="true" Justify="Justify.Center">
            </MudStack>
        </MudItem>
        <MudItem xs="12">
            @if (string.IsNullOrEmpty(Output.Value))
            {
                <MudStack Justify="Justify.FlexStart" Spacing="2" Row="true">
                    <MudFab OnClick="SubmitAsync" Color="Color.Success" StartIcon="@Icons.Material.Rounded.Bolt"/>
                    <MudText Class="d-flex align-center" Typo="Typo.h5">Generate!</MudText>
                </MudStack>
            }
            else
            {
                <MudPaper>
                    <MudStack>
                        <MudStack C Justify="Justify.FlexStart" Row="true">
                            <MudIconButton Class="mt-1 ml-1" OnClick="SubmitAsync" Color="Color.Success" Icon="@Icons.Material.Rounded.Bolt"/>
                        </MudStack>
                        <MudContainer>
                            @Output

                            <MudStack Justify="Justify.FlexEnd" Row="true">
                                <MudIconButton Class="ma-1" Icon="@Icons.Material.Rounded.ContentCopy" aria-label="Copy"
                                               OnClick="CopyCommitMessage"></MudIconButton>
                            </MudStack>
                        </MudContainer>
                    </MudStack>
                </MudPaper>
            }
        </MudItem>
        
        @* More things here *@
    </MudGrid>
</MudContainer>

