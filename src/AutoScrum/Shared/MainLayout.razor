@inherits LayoutComponentBase
@inject NavigationManager _nav

<MudThemeProvider Theme="SSWMudTheme.Theme" />

<MudDialogProvider/>
<MudSnackbarProvider/>

<MudLayout>
    <MudAppBar>
        <MudLink href="/"><MudText Typo="Typo.h3">SSW.Daily</MudText></MudLink>
        <MudSpacer/>
        <MudIconButton Icon="@Icons.Material.Rounded.Settings" OnClick="@(() => _nav.NavigateTo("/settings"))"/>
    </MudAppBar>
    <MudMainContent>
         <MudContainer MaxWidth="MaxWidth.Medium">
            @Body
         </MudContainer>
    </MudMainContent>
</MudLayout>