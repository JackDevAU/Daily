@inherits LayoutComponentBase
@inject NavigationManager _nav

<MudThemeProvider Theme="SSWMudTheme.Theme" />
<MudDialogProvider/>
<MudSnackbarProvider/>

<MudLayout>
    <MudAppBar>
        <MudLink Href="/" Style="@($"color:{SSWMudTheme.Theme.Palette.White}")" Typo="Typo.h3">AutoScrum</MudLink>
        <MudSpacer/>
        <MudIconButton Style="@($"color:{SSWMudTheme.Theme.Palette.White}")" Icon="@Icons.Material.Rounded.Settings" OnClick="@(() => _nav.NavigateTo("/settings"))" />
    </MudAppBar>
    <MudMainContent>
         <MudContainer MaxWidth="MaxWidth.Medium">
            @Body
         </MudContainer>
    </MudMainContent>
</MudLayout>